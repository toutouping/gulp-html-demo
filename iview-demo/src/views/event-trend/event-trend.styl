.event-trend {
  position: relative;
  width: 100%;
  flex: 1;
  padding-bottom: 20px;
  .filter-content {
    position: absolute;
    width: 100%;
    height: 55px;
    line-height: 55px;
    padding:0 20px;
    border-bottom: 1px solid transparent;
  }
  .trend-chart{
    margin-top: 55px;
    width: 100%;
    height: calc(100% - 55px);
  }
}
body.theme-dark {
  .event-trend {
    background: rgba(0,0,0,0.15);
    .filter-content {
      background: rgba(0,0,0,0.3);;
    }
  }
}
body.theme-light {
  .event-trend {
    background: #ffffff;
    .filter-content {
      background: #b3c5e9;
    }
  }
}