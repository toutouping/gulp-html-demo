.login {
  width: 100%;
  height: 100%;
  text-align: center;
  background-color: rgb(53, 152, 219);
  background-position: left bottom;
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: cover;
  &.bg {
    background-image: url("./img/bg.jpg");
  }
  .mock {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    height: 100%;
    width: 100%;
    padding: 0 20px 80px 20px;
    background: rgba(4, 40, 68, 0.78);
    .content {
      display: inline-block;
      border-radius: 2px 2px 5px 5px;
      padding: 5px 20px 20px 20px;
      width: 90%;
      max-width: 320px;
      background: #ffffff;
      position: relative;
      box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.3);
      .title {
        text-align: center;
        color: #444;
        font-size: 1.2em;
        font-weight: bold;
        border-bottom: 1px solid #eee;
        padding: 20px 0;
      }
      #form-content {
        .ivu-btn-primary {
          width: 100%;
          color: #fff;
          background-color: #2d8cf0;
          border-color: #2d8cf0;
          margin-bottom: 10px;
        }
        .ivu-input-wrapper {
          margin-bottom: 20px;
        }
        & >>> .ivu-input {
          padding-left: 32px;
          font-size: 12px;
          border: 1px solid #dcdee2;
          border-radius: 4px;
          color: #515a6e;
          background-color: #fff;
          background-image: none;
          position: relative;
          cursor: text;
        }
        .error-msg {
          color: red;
          text-align: left;
        }
      }
    }
  }
}

